<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars = "vertical"
    android:scrollbarStyle="insideInset">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/rel1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:saveEnabled="false">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/buildbg"
            android:id="@+id/image"
            android:scaleType="fitXY" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:src="@drawable/contprofile"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="30dp"
            android:id="@+id/leadimage"
            android:adjustViewBounds="false"
            android:cropToPadding="false" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/rel1"
        android:id="@+id/rel2">

        <TextView
            android:text="FIRST NAME"
            android:textStyle="bold"
            android:gravity="bottom"
            android:textColor="#c1000000"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/textView1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/relativeLayout">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginBottom="3dp">

                <EditText
                    android:id="@+id/hname"
                    android:layout_width="270dp"
                    android:layout_marginLeft="90dp"
                    android:backgroundTint="#c7c6c6"
                    android:textColorHint="#dfdfdf"
                    android:inputType="textMultiLine"
                    android:layout_height="wrap_content"
                    android:hint="Enter First Name Here"
                    />

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/rel2"
        android:id="@+id/rel3">

        <TextView
            android:text="LAST NAME"
            android:textStyle="bold"
            android:gravity="bottom"
            android:textColor="#c1000000"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/text_last" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="29dp"
           >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/design_last"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginBottom="3dp">

                <EditText
                    android:id="@+id/edit_lastname"
                    android:layout_width="270dp"
                    android:layout_marginLeft="90dp"
                    android:backgroundTint="#c7c6c6"
                    android:textColorHint="#dfdfdf"
                    android:inputType="textMultiLine"
                    android:layout_height="wrap_content"
                    android:hint="Enter Last Name Here"
                    />

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/rel3"
        android:id="@+id/rel4">

        <TextView
            android:text="USERNAME/EMAIL"
            android:textStyle="bold"
            android:gravity="bottom"
            android:textColor="#c1000000"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/text_username" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/relativeLayout">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/design_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginBottom="3dp">

                <EditText
                    android:id="@+id/edit_userName"
                    android:layout_width="270dp"
                    android:layout_marginLeft="90dp"
                    android:backgroundTint="#c7c6c6"
                    android:textColorHint="#dfdfdf"
                    android:inputType="textEmailAddress"
                    android:layout_height="wrap_content"
                    android:hint="Enter Username or Email Here"
                    />

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>
    </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/rel4"
            android:id="@+id/rel6">

            <TextView
                android:text="MOBILE"
                android:textStyle="bold"
                android:gravity="bottom"
                android:textColor="#c1000000"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/text_phoneNum" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="29dp"
                android:layout_below="@+id/relativeLayout">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/design_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_marginBottom="3dp">

                    <EditText
                        android:id="@+id/edit_phone"
                        android:layout_width="270dp"
                        android:layout_marginLeft="90dp"
                        android:backgroundTint="#c7c6c6"
                        android:textColorHint="#dfdfdf"
                        android:inputType="phone"
                        android:layout_height="wrap_content"
                        android:hint="Enter Mobile Number Here"
                        />

                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/rel6"
            android:id="@+id/rel7">

            <TextView
                android:text="DESIGNATION"
                android:textStyle="bold"
                android:gravity="bottom"
                android:textColor="#c1000000"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/text_Designation" />
            <!--<TextView
                android:text="*"
                android:textColor="#fc0101"
                android:textStyle="bold"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="210dp"
                android:layout_marginLeft="175dp"
                android:id="@+id/text_star5" />-->

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="45dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:textColorHint="#dfdfdf"
                android:inputType="textNoSuggestions"
                android:hint="Select Designation"
                android:textSize="18dp"
                android:gravity="bottom"
                android:layout_marginLeft="80dp"
                android:id="@+id/text_designation" />
            <View
                android:id="@+id/view1"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:backgroundTint="#c7c6c6"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="75dp"
                android:background="#7c7878" />

        </RelativeLayout>


            <TextView
                android:text="SUBMIT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="660dp"
                android:textColor="#ffffff"
                android:textSize="23dp"
                android:background="#ea9a12"
                android:gravity="center"
                android:id="@+id/text_submit" />
        </RelativeLayout>


</ScrollView>
