<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mitosis.salemanager.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/relative"
        android:background="@drawable/doctor_banner">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Login to your existing account "
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"

            android:id="@+id/textView11" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative"
        android:background="@drawable/login_bg"
        android:id="@+id/relative1">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relative3"
            android:layout_marginTop="10dp"
            android:id="@+id/relative4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Change Password"
                android:id="@+id/text_signup"
                android:textStyle="bold"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="250dp"
            android:id="@+id/relative3"
            android:background="@drawable/login_box"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp"

            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/login_email_field"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"
                android:paddingLeft="50dp"
                android:id="@+id/text_usernameLogin"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/text_passwordLogin"
                android:paddingLeft="50dp"
                android:includeFontPadding="true"
                android:layout_below="@+id/text_usernameLogin"
                android:background="@drawable/login_pass_field"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/Text1"
                android:text="Forgot  Password?"
                android:textColor="#000000"
                android:layout_below="@+id/text_passwordLogin"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="180dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/login_button"
                android:id="@+id/btn_login"
                android:text="LOG IN"
                android:textColor="#ffffff"
                android:layout_marginTop="26dp"
                android:layout_alignTop="@+id/Text1"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                />

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember Me"
                android:layout_alignBaseline="@+id/Text1"
                android:layout_alignBottom="@+id/Text1"
                android:layout_alignLeft="@+id/text_passwordLogin"
                android:layout_alignStart="@+id/text_passwordLogin" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
