<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars = "vertical"
    android:scrollbarStyle="insideInset">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/rel1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:saveEnabled="false">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/buildbg"
                android:id="@+id/image"
                android:scaleType="fitXY" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:src="@drawable/contprofile"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="30dp"
                android:id="@+id/leadimage"
                android:adjustViewBounds="false"
                android:cropToPadding="false" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/rel1"
            android:id="@+id/rel2">

            <TextView
                android:text="DOCTOR NAME"
                android:textStyle="bold"
                android:gravity="bottom"
                android:textColor="#000"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textView1" />
            <TextView
                android:text="*"
                android:textColor="#fc0101"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="210dp"
                android:layout_marginLeft="125dp"
                android:id="@+id/textView2" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:textColorHint="#dfdfdf"
                android:inputType="textNoSuggestions"
                android:hint="Enter Doctor Name Here"
                android:layout_marginLeft="80dp"
                android:id="@+id/edit_docname"
                android:backgroundTint="#c7c6c6"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/rel2"
            android:id="@+id/rel3">

            <TextView
                android:text="DOCTOR DESTINATION/DIVISION"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textView3" />
            <TextView
                android:text="*"
                android:textColor="#fc0101"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginRight="90dp"
                android:layout_marginLeft="240dp"
                android:id="@+id/textView4" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rel3"
            android:id="@+id/rel4">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColorHint="#dfdfdf"
                android:backgroundTint="#c7c6c6"
                android:inputType="textNoSuggestions"
                android:hint="Enter Doctor Destination/Division"
                android:layout_marginLeft="80dp"
                android:id="@+id/edit_docdes" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/rel4"
            android:id="@+id/rel5">

            <TextView
                android:text="ADDRESS"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textView5" />
            <TextView
                android:text="*"
                android:textColor="#fc0101"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginRight="250dp"
                android:layout_marginLeft="90dp"
                android:id="@+id/textView6" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/marker"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="0dp"
                android:id="@+id/imageicon" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_below="@+id/rel5"
            android:id="@+id/rel6">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textNoSuggestions"
                android:hint="Address Line 01"
                android:textColorHint="#dfdfdf"
                android:layout_marginLeft="80dp"
                android:id="@+id/edit_add1"
                android:backgroundTint="#c7c6c6"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textNoSuggestions"
                android:hint="Address Line 02"
                android:textColorHint="#dfdfdf"
                android:layout_below="@+id/edit_add1"
                android:layout_marginLeft="80dp"
                android:id="@+id/edit_add2"
                android:backgroundTint="#c7c6c6"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textNoSuggestions"
                android:hint="City"
                android:textColorHint="#dfdfdf"
                android:layout_below="@+id/edit_add2"
                android:layout_marginLeft="80dp"
                android:id="@+id/edit_city"
                android:backgroundTint="#c7c6c6"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textNoSuggestions"
                android:hint="State"
                android:textColorHint="#dfdfdf"
                android:layout_below="@+id/edit_city"
                android:layout_marginLeft="80dp"
                android:id="@+id/edit_state"
                android:backgroundTint="#c7c6c6"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textNoSuggestions"
                android:hint="Zip Code"
                android:textColorHint="#dfdfdf"
                android:layout_below="@+id/edit_state"
                android:layout_marginLeft="80dp"
                android:id="@+id/edit_pin"
                android:backgroundTint="#c7c6c6"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="565dp"
            android:id="@+id/rel7">

            <TextView
                android:text="CONTACT NUMBER"
                android:textStyle="bold"
                android:gravity="bottom"
                android:textColor="#000"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textView7" />
            <TextView
                android:text="*"
                android:textColor="#fc0101"
                android:textStyle="bold"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginRight="180dp"
                android:layout_marginLeft="155dp"
                android:id="@+id/textView8" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rel7"
            android:layout_marginTop="10dp"
            android:id="@+id/rel8">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColorHint="#dfdfdf"
                android:inputType="textNoSuggestions"
                android:hint="Landline/Mobile Number"
                android:layout_marginLeft="80dp"
                android:id="@+id/edit_mobNum"
                android:backgroundTint="#c7c6c6"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/rel8"
            android:layout_marginTop="0dp"
            android:id="@+id/rel9">

            <TextView
                android:text="ASSIGN TO"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textView9" />
            <TextView
                android:text="*"
                android:textColor="#fc0101"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginRight="230dp"
                android:layout_marginLeft="100dp"
                android:id="@+id/textView10" />

            <Spinner
                android:id="@+id/btn_spinner"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView9"
                android:layout_marginLeft="80dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="710dp"
            android:background="#f2b10c"
            android:id="@+id/layout_create">

            <TextView
                android:text="CREATE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:textSize="23dp"
                android:id="@+id/text_create" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>