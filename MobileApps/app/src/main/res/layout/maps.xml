<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/hospital"
            android:layout_marginTop="0dp">

            <TextView
                android:text="Dr.Mary Sanchez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_marginTop="65dp"
                android:id="@+id/textView4" />

            <TextView
                android:text="Chief Medical Officer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:textColor="#fcf8f8"
                android:layout_marginTop="95dp"
                android:id="@+id/textView2" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/doctor2"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="65dp"
                android:id="@+id/imageView13" />



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="130dp"
            android:id="@+id/relativeLayout2">

            <TextView
                android:text="ADDRESS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textSize="14dp"
                android:textColor="#353030"
                android:id="@+id/textView5" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="155dp"
            android:id="@+id/relativeLayout3">

            <TextView
                android:text="No.3 New Life Hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="0dp"
                android:id="@+id/textView6" />

            <TextView
                android:text="Velachey Main Road"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="23dp"
                android:id="@+id/textView7" />

            <TextView
                android:text="Chennai-600073"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="5dp"
                android:id="@+id/textView8" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="220dp"
            android:id="@+id/relativeLayout4">

            <TextView
                android:text="2.5 miles away"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="7dp"
                android:id="@+id/textView9" />

            <TextView
                android:text="Attended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="223dp"
                android:layout_marginTop="7dp"
                android:id="@+id/textView10" />

            <TextView
                android:text="Call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="7dp"
                android:id="@+id/textView12" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/marker"
                android:layout_marginLeft="59dp"
                android:layout_marginTop="4dp"
                android:id="@+id/imageView3" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/phonepurple"
                android:layout_marginLeft="305dp"
                android:layout_marginTop="5dp"
                android:id="@+id/imageView4" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/cyclegreen"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="4dp"
                android:id="@+id/imageView5" />
        </RelativeLayout>


        <View
            android:layout_width="310dp"
            android:layout_height="1dp"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="60dp"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="470dp"
            android:background="#f2b10c"
            android:id="@+id/relativeLayout5">

            <TextView
                android:text="SUBMIT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:textColor="#ffffff"
                android:textSize="23dp"
                android:id="@+id/text_submit" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="260dp">

            <TextView
                android:text="MAPVIEW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textSize="14dp"
                android:textColor="#353030"
                android:layout_marginTop="0dp"
                android:id="@+id/textView3" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/map"
                android:layout_below="@+id/add"
                android:layout_width="350dp"
                android:layout_height="120dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="46dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="430dp">



            <EditText
                android:id="@+id/hname"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:hint="Write your description here.."
                android:inputType="textAutoComplete"
                android:layout_marginLeft="45dp"
                android:maxLines="1"
                android:singleLine="true" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="390dp">
            <TextView
                android:text="DESCRIPTION"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#353030"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/textView" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
