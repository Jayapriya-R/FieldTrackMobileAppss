<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@color/lightblue"
        android:id="@+id/bannerrel">
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="75dp"
            android:layout_height="75dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:civ_border_color="@color/rosybrown"
                app:civ_border_width="2dp"
                android:src="@drawable/dooo"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="80dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

         <TextView
             android:layout_width="match_parent"
             android:layout_height="20dp"
             android:id="@+id/docna"
             android:text="Dr.Raymond White"/>
            <TextView
                android:layout_below="@+id/docna"
                android:text="chief Medical Officer"
                android:textSize="12sp"

                android:layout_width="match_parent"
                android:layout_height="30dp"
                />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/raddress"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/addre"
            android:text="ADDRESS"/>

        <TextView
            android:layout_below="@+id/addre"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:textSize="12sp"
            android:id="@+id/fulladdre"
            android:text=" 645 McQueen Smith Blvd.\r\n Suite 309\r\n  Prattville,Al 36066"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/raddress"
        android:id="@+id/phone">

        <ImageView
            android:layout_width="25dp"
              android:src="@drawable/marker"
            android:layout_height="20dp" />
        <TextView
            android:layout_marginTop="3dp"
            android:layout_width="35dp"
            android:textSize="12sp"

            android:layout_height="20dp"
            android:text="7.5"
            android:layout_marginLeft="25dp"/>
        <TextView
            android:layout_width="95dp"
            android:text="Miles Away"
            android:layout_marginTop="3dp"
            android:layout_height="20dp"
            android:textSize="12sp"

            android:layout_marginLeft="50dp"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:src="@drawable/cyclepurple"
            android:layout_marginLeft="140dp"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:text="Attended"
            android:textSize="12sp"

            android:layout_marginTop="3dp"

            android:layout_marginLeft="175dp"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:src="@drawable/phonepurple"
            android:layout_marginLeft="240dp"
            android:id="@+id/calltext"
            />
        <TextView
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:text="call"
            android:layout_marginTop="3dp"
            android:textSize="12sp"

            android:layout_marginLeft="280dp"
            android:id="@+id/call"
            />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/call"
            android:layout_marginTop="4dp"
            android:background="#bfbfbf" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:id="@+id/add"
            android:text="MAPVIEW" />
        <com.google.android.gms.maps.MapView
            android:id="@+id/map"
            android:layout_below="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:id="@+id/rdes"
      android:layout_height="90dp">
      <android.support.design.widget.TextInputLayout
          android:id="@+id/tildes"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="2dp">
      <EditText
          android:id="@+id/txtemail"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="DESCRIPTION"
          android:minLines="2"
          android:scrollbars="vertical"
          android:inputType="textMultiLine"
          android:maxLines="5" />
      </android.support.design.widget.TextInputLayout>

  </RelativeLayout>

    <Button
        android:layout_below="@+id/rdes"
        android:text="submit"
        android:id="@+id/submit_details"
        android:textColor="@color/white"
        android:background="@color/oragne"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
