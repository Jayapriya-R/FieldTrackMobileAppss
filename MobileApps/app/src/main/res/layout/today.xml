<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/relativeLayout">

        <RelativeLayout
            android:layout_width="95dp"
            android:layout_height="75dp"
            android:layout_marginTop="8dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                app:civ_border_color="@color/rosybrown"
                app:civ_border_width="1dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/doctor2"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="95dp"
            android:layout_height="75dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/rdocname"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/doconame"
                    android:textSize="20dp"
                    android:text="Dr. Mary Sanchez"
                    android:textColor="#403b3b"
                    android:layout_height="25dp" />

                <TextView
                    android:text=""
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="180dp"
                    android:id="@+id/textView13" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/rdocname"
                android:layout_height="55dp">
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/marker"
                    android:layout_height="15dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"/>


                <TextView
                    android:layout_width="95dp"
                    android:text="7.5 Miles Away"
                    android:layout_marginTop="2dp"
                    android:layout_height="20dp"
                    android:textSize="12sp"

                    android:layout_marginLeft="25dp"/>

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="20dp"
                    android:src="@drawable/rightanglearrow"
                    android:layout_marginLeft="240dp"
                    />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="18dp"
                    app:srcCompat="@drawable/start"
                    android:layout_marginLeft="150dp"
                    android:id="@+id/start_image" />

                <TextView
                    android:text="New"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:id="@+id/start_new" />

            </RelativeLayout>

        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>
